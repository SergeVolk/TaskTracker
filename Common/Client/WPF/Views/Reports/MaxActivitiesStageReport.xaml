<UserControl x:Class="TaskTracker.Client.WPF.Views.MaxActivitiesStageReport"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TaskTracker.Client.WPF.Views"
             mc:Ignorable="d">
    <Grid x:Name="gridLayout">
        <TextBlock x:Name="txtBlockMaxActivitiesStage" HorizontalAlignment="Left" Margin="10" TextWrapping="Wrap" VerticalAlignment="Top">
            <Run Text="The stage &quot;"/>
            <InlineUIContainer>
                <TextBlock Text="{Binding Stage}"/>
            </InlineUIContainer>
            <Run Text="&quot; includes maximum activities: "/>
            <InlineUIContainer>
                <TextBlock Text="{Binding ActivityCount}"/>
            </InlineUIContainer>            
        </TextBlock>
    </Grid>
</UserControl>
